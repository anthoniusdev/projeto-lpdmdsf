<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary_color"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvTituloExclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar exclusÃ£o"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvMensagemExclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tem certeza que deseja excluir?"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:textColor="@color/black"
                android:id="@+id/btnCancelarExclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/btnConfirmarExclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluir"
                android:backgroundTint="#F44336" /> <!-- Cor vermelha para indicar perigo -->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>